<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/post_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ins_post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img4"
            android:adjustViewBounds="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ins_user_avatar_post"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img8"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/ins_user_name_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cam.bags"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:id="@+id/ins_post_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alan Avry - Shine On Me (Instrumental)"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="70dp"/>

        <ImageView
            android:id="@+id/ic_more_horiz"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="360dp" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/post_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/post_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart_ins"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/chat_ins"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="75dp"
                android:src="@drawable/send_ins"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="350dp"
                android:src="@drawable/save_instagram"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/like_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100K lượt thích"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/content_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content post"
            android:textColor="@color/black"
            android:layout_marginTop="55dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem tất cả 100 bình luận"
            android:textColor="#A3A1A1"
            android:layout_marginTop="75dp"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/commenter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dindin26_02"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="95dp"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="So beautiful"
            android:textColor="#A3A1A1"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/commenter_name"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="95dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/heart_ins"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>