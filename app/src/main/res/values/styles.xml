<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="chatListItemName">
        <item name="android:textColor">#5A5A5C</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="chatListItemDate">
        <item name="android:textColor">@color/chatListItemHints</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="chatListItemHints">
        <item name="android:textColor">@color/chatListItemHints</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="chatListItemNewCount">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_chat_item_new_count</item>
    </style>
    <style name="chatBubbleLeft">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#45484D</item>
    </style>
    <style name="chatBubbleRight">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#45484D</item>
    </style>
</resources>