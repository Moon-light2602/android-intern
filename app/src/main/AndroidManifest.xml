<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.hanu.app">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pinterest"
        tools:targetApi="31">

        <activity android:name=".messenger.MessengerActivity"
            android:exported="false" />

        <activity android:name=".messenger.ChatActivity"
            android:exported="false"/>

        <activity android:name=".tiktok.TiktokActivity"
            android:exported="false" />
        <activity
            android:name=".instagram.InstagramActivity"
            android:exported="false" />
        <activity
            android:name=".facebook.FacebookActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pinterest.PinterestActivity"
            android:exported="false" />

    </application>

</manifest>